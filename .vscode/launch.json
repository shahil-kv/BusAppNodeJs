{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Bus App Node.js Application",
            "program": "${workspaceFolder}/src/main.ts", // Adjust this path to where your main.ts actually is
            "skipFiles": [
                "<node_internals>/**"
            ],
            "restart": true,
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ], // For TypeScript support
            "preLaunchTask": "tsc: build - tsconfig.json" // Optional: add this if you want to build before launching
        }
    ]
}